{
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"browser": true,
		"jest/globals": true
	},
	"extends": ["standard"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"react", "jest"
	],
	"rules": {
		"max-len": ["error", { "code": 150, "tabWidth": 2 }],
		"indent": [
			"warn", 2
		],
		"no-unused-vars": ["off"],
		"no-console": [
			"error", {
				"allow": ["warn", "error", "info"]
			}
		],
		"key-spacing": [
			"error", {
				"align": "colon"
			}
		]
	}
}